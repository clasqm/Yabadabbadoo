			case "YA_yabButton"
				YA_Fillerup("yab")
				break
			case "YA_AllButton"
				YA_Fillerup("all")
				break
			case "YA_FindButton"
				YA_Fillerup("find")
			//#########yabEditor Commands#########
			case "YEMenuView:File:Save":
