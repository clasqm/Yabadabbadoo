				break
			case "YEMenuView:File:Transfer...:to Trope":
				if window get "YEMainWindow","exists" = 1 then
					YESaveFile(YECurrentFile$)
					system("/boot/system/apps/Trope/Trope '" + YECurrentFile$ + "' &")
