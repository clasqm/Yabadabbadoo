				break
			case "MainWindow:Utilities:System Prefs"
				system("/boot/system/Tracker /boot/system/preferences &")
				break
			case "MainWindow:Utilities:To-do Manager" 
				system("/boot/system/apps/vstm_GUI &")
				break
